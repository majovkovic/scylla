{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
    },
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
