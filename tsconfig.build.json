{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "stripInternal": true,
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "composite": false
  },
  "include": ["src/index.ts"],
  "exclude": ["tests", "node_modules", "**/*.test.ts", "**/*.spec.ts", "dist/**/*"]
}
